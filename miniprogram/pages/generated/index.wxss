.container {
  padding: 32rpx;
  background-color: #f5f5f7;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.loading-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 80vh;
}

.status-text {
  font-size: 28rpx;
  color: #888;
  margin-top: 32rpx;
  text-align: center;
}

.error-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 80vh;
  padding: 0 48rpx;
}

.error-text {
  font-size: 32rpx;
  color: #333;
  margin: 40rpx 0;
  text-align: center;
}

.error-container .retry-button {
  width: 80% !important;
  margin-top: 48rpx;
}

.image-preview {
  width: 100%;
  height: 640rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 32rpx;
  border-radius: 24rpx;
  overflow: hidden;
  background-color: #fff;
  box-shadow: 0 4rpx 24rpx rgba(0, 0, 0, 0.1);
}

.image-preview image {
  width: 100%;
  height: 100%;
  object-fit: contain;
}

.prompt-card {
  width: 100%;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05);
}

.prompt-label {
  font-size: 28rpx;
  color: #888;
  margin-bottom: 12rpx;
}

.prompt-text {
  font-size: 32rpx;
  color: #333;
  line-height: 1.5;
}

.action-buttons {
  display: flex;
  width: 100%;
  gap: 24rpx;
  margin-bottom: 24rpx;
}

.action-button {
  flex: 1 !important;
}

.retry-button {
  background-color: #f5f5f7 !important;
  border: 2rpx solid #ddd !important;
  color: #333 !important;
}

.publish-button {
  background-color: #0052d9 !important;
}

.tip-text {
  font-size: 28rpx;
  color: #888;
  text-align: center;
  margin-top: 16rpx;
} 