.container {
  padding-bottom: 100rpx;
  background-color: #f5f5f7;
  min-height: 100vh;
}

.image-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
  padding: 24rpx;
}

.image-card {
  background-color: #fff;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
  display: flex;
  flex-direction: column;
}

.image-container {
  height: 320rpx;
  overflow: hidden;
}

.image-container image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.3s ease;
}

.image-container:active image {
  transform: scale(1.05);
}

.card-footer {
  padding: 16rpx 20rpx;
  display: flex;
  flex-direction: column;
  flex: 1;
}

.prompt-container {
  flex: 1;
  margin-bottom: 12rpx;
}

.image-prompt {
  font-size: 26rpx;
  color: #333;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.user-info {
  display: flex;
  align-items: center;
  padding: 8rpx 0;
  border-top: 1rpx solid #f0f0f0;
}

.user-avatar {
  width: 48rpx !important;
  height: 48rpx !important;
  min-width: 48rpx !important;
  min-height: 48rpx !important;
  font-size: 24rpx !important;
  flex-shrink: 0;
}

.user-name {
  font-size: 24rpx;
  color: #666;
  margin-left: 12rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.loading-container {
  text-align: center;
  padding: 32rpx;
  color: #888;
}

/* Override FAB button positioning */
.t-fab {
  bottom: 140rpx !important;
  right: 40rpx !important;
} 