.container {
  padding-bottom: 100rpx;
  background-color: #f5f5f7;
  min-height: 100vh;
}

.image-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
  padding: 24rpx;
}

.image-card {
  background-color: #fff;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
}

.image-container {
  height: 320rpx;
  overflow: hidden;
}

.image-container image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.image-prompt {
  padding: 16rpx 24rpx;
  font-size: 26rpx;
  color: #333;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.loading-container {
  text-align: center;
  padding: 32rpx;
  color: #888;
}

/* Override FAB button positioning */
.t-fab {
  bottom: 140rpx !important;
  right: 40rpx !important;
} 