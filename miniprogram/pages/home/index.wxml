<!-- Home page - Image gallery grid -->
<view class="container">
  <view class="image-grid">
    <block wx:for="{{images}}" wx:key="id">
      <view class="image-card">
        <view class="image-container">
          <image src="{{item.imageUrl}}" mode="aspectFill" lazy-load="true" />
        </view>
        <view class="image-prompt">{{item.promptText}}</view>
      </view>
    </block>
  </view>
  
  <!-- Loading more indicator -->
  <view class="loading-container" wx:if="{{loading}}">
    <t-loading theme="circular" size="40rpx" text="正在加载更多..." />
  </view>
  
  <!-- No more data divider -->
  <t-divider wx:if="{{hasReachedEnd && !loading}}" content="没有更多了" />
  
  <!-- Floating action button for creating images -->
  <t-fab icon="add" bind:click="navigateToCreate" aria-label="创建图片" />
</view> 