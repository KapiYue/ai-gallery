.container {
  padding-bottom: 32rpx;
  background-color: #f5f5f7;
  min-height: 100vh;
}

/* Loading state */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 80vh;
}

/* Not logged in styles */
.login-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
  height: calc(100vh - 240rpx);
}

.login-avatar {
  margin-bottom: 48rpx;
}

.login-text {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 80rpx;
  text-align: center;
}

.login-button {
  width: 80% !important;
  background-color: #07c160 !important;
}

/* Logged in styles */
.profile-header {
  background-color: #fff;
  padding: 48rpx 32rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 24rpx;
}

.avatar-wrapper {
  position: relative;
  margin-right: 32rpx;
}

.profile-avatar {
  margin-right: 0;
}

.edit-avatar {
  position: absolute;
  right: -8rpx;
  bottom: -8rpx;
  background-color: #0052d9;
  color: white;
  border-radius: 50%;
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
  z-index: 1;
}

.edit-btn {
  margin-top: 16rpx !important;
  font-size: 24rpx !important;
  padding: 0 24rpx !important;
  height: 56rpx !important;
}

.profile-info {
  flex: 1;
}

.profile-name {
  font-size: 36rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
}

.profile-id {
  font-size: 28rpx;
  color: #888;
}

.section-header {
  padding: 32rpx;
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  display: flex;
  align-items: center;
}

.section-icon {
  margin-right: 16rpx;
  color: #0052d9;
}

/* Image gallery grid */
.image-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
  padding: 0 24rpx 24rpx 24rpx;
}

.image-card {
  background-color: #fff;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
}

.image-container {
  height: 320rpx;
  overflow: hidden;
}

.image-container image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.image-prompt {
  padding: 16rpx 24rpx;
  font-size: 26rpx;
  color: #333;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

/* Empty state */
.empty-actions {
  display: flex;
  justify-content: center;
  margin-top: 40rpx;
}

/* Logout section */
.logout-section {
  margin-top: 80rpx;
  padding: 0 40rpx 40rpx;
}

.logout-button {
  width: 100% !important;
  color: #e34d59 !important;
  border-color: #e34d59 !important;
} 