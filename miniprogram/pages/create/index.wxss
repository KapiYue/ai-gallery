.container {
  padding: 32rpx 32rpx 80rpx;
  background-color: #f5f5f7;
  min-height: 100vh;
}

.section {
  margin-bottom: 48rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 16rpx;
}

.optional-text {
  font-size: 24rpx;
  color: #888;
  font-weight: normal;
  margin-left: 16rpx;
}

.prompt-textarea, .negative-textarea {
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 24rpx;
}

.prompt-textarea {
  height: 240rpx !important;
}

.negative-textarea {
  height: 160rpx !important;
}

.helper-tip {
  margin-bottom: 32rpx !important;
  background-color: #f0f9ff !important;
  color: #0052d9 !important;
  border-radius: 12rpx !important;
}

.tags-container {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-bottom: 40rpx;
}

.tag-item {
  margin-right: 0 !important;
}

.generate-button {
  width: 100% !important;
  margin-bottom: 16rpx !important;
} 